<div class="container-fluid">
  <div class="col-lg-4">
    <div class="row center">
      <h1 class="title">
        Coral Coast International School
      </h1>
      <br>
      <%= link_to "Donate Now!", donations_path, class: "btn btn-primary btn-full", id: "btn-home" %>
    </div>
    <div class="row center quote-box">
      <div class="col-2 blue">
        <%= image_tag "open_quotes.png", class: "icon" %>
      </div>
      <div class="quote center col red">
        An investment in knowledge pays the best interest.
      </div>
      <div class="col-2 yellow">
        <%= image_tag "close_quotes.png", class: "icon" %>
      </div>
    </div>
    <br>
    <div class="col-lg-6 col-lg-offset-6 author">
      Benjamin Franklin
    </div>
  </div>
  <div class="col-lg-8">
    <%= image_tag "front_page.jpg", :alt => "Children of Coral Coast International School", id: "home_image" %>
  </div>
</div>