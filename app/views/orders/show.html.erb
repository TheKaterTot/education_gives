<h1>Order Number: <%= @order.id %></h1>
<table>
<tr>
  <th colspan="2">Info</th>
  <th>Price</th>
  <th>Quantity</th>
  <th>Subtotal</th>
  <th></th>
</tr>
<% @order.details.each do |order_donation| %>
<tr id=donation-<%= order_donation.donation.id %>>
  <td><%= image_tag order_donation.donation.image_path %></td>
  <td><%= order_donation.donation.title %></td>
  <td><%= order_donation.donation.price %></td>
  <td><%= order_donation.quantity %></td>
  <td><%= order_donation.subtotal %></td>
</tr>
<% end %>
<tr id="total">
  <th colspan="3"></th>
  <th>TOTAL</th>
  <th><%= @order.total %></th>
</tr>
</table>

<%= link_to "Return to All Orders", orders_path, class: "btn" %>
