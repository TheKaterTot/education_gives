<!DOCTYPE html>
<html>
  <head>
    <title>EducationGives</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>


    <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand" href="#">EducationGives</a>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <%= link_to "Home", "#", class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Dropdown link
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
              <%= link_to "My Account", dashboard_path, class: "dropdown-item" %>
              <a class="dropdown-item" href="#">Action</a>
              <a class="dropdown-item" href="#">Another action</a>
              <a class="dropdown-item" href="#">Something else here</a>
            </div>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Features</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Pricing</a>
          </li>
        </ul>
      </div>
    </nav>


    <nav class="navbar navbar-light">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">
            Education Gives
          </a>
          <ul class="nav navbar-nav navbar-left">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Home <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "My Account", dashboard_path %></li>
                <li><%= link_to "Make A Donation", "#" %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to "Home", "#" %></li>
              </ul>
            </li>
          </ul>
          <p class="navbar-text navbar-right">
            <% if current_user == session[:user_id] %>
              <%= link_to "Login", login_path, class: "navbar-link" %>
            <% else %>
            Logged in as <%= current_user.first_name %>.
              <%= link_to "Logout", logout_path, class: "navbar-link", method: :delete %>
            <% end %>
          </p>
          <p class="navbar-text navbar-right">
            <%= link_to "Cart: #{@cart.total_count}", cart_index_path, class: "navbar-link" %>
          </p>
        </div>
      </div>
    </nav>
    <% flash.each do |type, message| %>
      <%= content_tag :div, message.html_safe, class: "alert alert-#{type}" %>
    <% end %>
    <div class="container-fluid">
      <%= yield %>
    </div>
  </body>
</html>
