<h1>All Donations</h1>
<br>
<%= link_to "Create New Donation", new_admin_donation_path, class: "btn btn-success" %>
<br><br>
<table class=index-table>
  <tr>
    <th colspan="2">Donation</th>
    <th>Description</th>
    <th>Price</th>
    <th>Active or Retired</th>
    <th></th>
  </tr>
<% @donations.each do |donation| %>
  <tr id=admin-donation-<%= donation.id %>>
    <td><%= image_tag donation.image.url(:thumb) %></td>
    <td><%= link_to donation.title, admin_donation_path(donation) %></td>
    <td><%= donation.description %></td>
    <td class=currency><%= donation.display_price %></td>
    <td><%= donation.display_active %></td>
    <td><%= link_to "Edit", edit_admin_donation_path(donation), class: "btn btn-xs btn-default"%></td>
  </tr>
<% end %>
</table>
