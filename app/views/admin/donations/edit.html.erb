<h1>Edit Donation</h1>

<%= form_for @donation, url: admin_donation_path(@donation) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.label :category %>
  <%= f.collection_select(:category_id, @categories, :id, :name, {:prompt => true} ) %>
  <%= f.label :image %>
  <%= f.file_field :image %>

  <%= f.submit %>
<% end %>
