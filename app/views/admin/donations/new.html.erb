<h1>New Donation</h1>

<%= form_for @donation, url: admin_donations_path do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.label :category %>
  <%= f.collection_select(:category_id, @categories, :id, :name, {:prompt => true} ) %>
  <%= f.label :image_path %>
  <%= f.file_field :image_path %>

  <%= f.submit %>
<% end %>
