<h1>New Donation</h1>
<br>
<%= form_for @donation, url: admin_donations_path do |f| %>
  <table class=form-table>
    <tr>
      <th><%= f.label :title %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :description %></th>
      <td><%= f.text_area :description %></td>
    </tr>
    <tr>
      <th><%= f.label :price %></th>
      <td><%= f.text_field :price %></td>
    </tr>
    <tr>
      <th><%= f.label :category %></th>
      <td><%= f.collection_select(:category_id, @categories, :id, :display_name, {:prompt => true} ) %></td>
    </tr>
    <tr>
      <th><%= f.label :image %></th>
      <td><%= f.file_field :image %></td>
    </tr>
  </table>
  <br>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
